{
  "name": "laa-dashboard",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.3.0",
    "audit-ci": "^5.0.0",
    "react-scripts": "4.0.3"
  },
  "dependencies": {
    "firebase": "9.1.2",
    "font-awesome": "^4.7.0",
    "react": "^17.0.2",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "engines": {
    "node": "^14.18.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "sh -ac '. .env.${REACT_APP_ENV} && react-scripts build'",
    "build:test": "REACT_APP_ENV=test npm run build",
    "build:prod-int": "REACT_APP_ENV=prod-int npm run build",
    "build:prod-ext": "REACT_APP_ENV=prod-ext npm run build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy-test": "build:test; firebase deploy --project laa-dashboard-test",
    "deploy-prod-int": "yarn run build:prod-int; firebase deploy --project laa-dashboard-int",
    "deploy-prod-ext": "yarn run build:prod-ext; firebase deploy --project laa-dashboard",
    "init": "firebase use laa-dashboard-test; firebase database:set /services services.json -y",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .js,.jsx .",
    "audit": "audit-ci --skip-dev"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
